<?xml version="1.0" encoding="UTF-8"?>
<coreView:ContentPageBase xmlns="http://xamarin.com/schemas/2014/forms" 
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
				 xmlns:coreView="clr-namespace:Athena.Core.Pcl.Views;assembly=Athena.Core.Pcl"
                 x:Class="Athena.TestHarness.Pcl.TestHarnessPage">
	<coreView:ContentPageBase.Padding>
    	<OnPlatform x:TypeArguments="Thickness">
	        <OnPlatform.iOS>
	          0, 20, 0, 0
	        </OnPlatform.iOS>
	        <OnPlatform.Android>
	          0, 0, 0, 0
	        </OnPlatform.Android>
	        <OnPlatform.WinPhone>
	          0, 0, 0, 0
	        </OnPlatform.WinPhone>
      	</OnPlatform>
	</coreView:ContentPageBase.Padding>

	<coreView:ContentPageBase.Content>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<Button Grid.Row="0"
			        Grid.Column="0"
			        BackgroundColor="Olive"
			        Text="RelativeLayout" 
			        TextColor="White"/>

			<Button Grid.Row="0"
			        Grid.Column="1"
			        Grid.ColumnSpan="2"
			        BackgroundColor="Purple"
			        Text="GestureAwareContentView" 
			        TextColor="White"/>
		</Grid>
	</coreView:ContentPageBase.Content>
</coreView:ContentPageBase>
